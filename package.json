{
  "name": "ml4g-interactive-resources",
  "version": "1.0.0",
  "description": "Interactive resources for Machine Learning for Graphs course",
  "scripts": {
    "dev": "vite serve src --host",
    "build": "npm run build:components && npm run build:site",
    "build:components": "node scripts/build-components.js",
    "build:site": "node scripts/build-site.js",
    "build:nav": "node scripts/build-site.js --update-nav",
    "preview": "vite preview --outDir docs",
    "clean": "rimraf docs/topics/*/dist docs/assets/js/components"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "glob": "^10.3.0",
    "fs-extra": "^11.1.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "d3": "^7.8.0",
    "@types/d3": "^7.4.0",
    "recharts": "^2.8.0",
    "plotly.js": "^2.26.0",
    "react-plotly.js": "^2.6.0"
  }
}